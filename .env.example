# Database
DATABASE_URL="postgresql://user:password@localhost:5432/diamond_dock"

# Redis
REDIS_URL="redis://localhost:6379"

# Auth (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_METERED_PRICE_ID="price_..."

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Billing Mode
BILLING_MODE="mock"  # "mock" | "production"

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=""
OTEL_SERVICE_NAME="diamond-dock"

# Security
API_SECRET_SALT="change-me-in-production"

# Pricing (USD cents)
PRICE_PER_MB_IN=10
PRICE_PER_MB_OUT=15
PRICE_PER_GATE=1
PRICE_PER_AUDIT_EVENT=2

# Service Policy
BILLING_GRACE_PERIOD_DAYS=3

# Rate Limiting (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"
DEFAULT_RATE_LIMIT=100  # requests per minute per tenant
